<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageViewTemps"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/chronometre"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/route"
        android:id="@+id/imageViewDistance"
        android:layout_row="1"
        android:layout_column="0" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageViewVitesse"
        android:background="@drawable/bipbip"
        android:layout_row="2"
        android:layout_column="0" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageViewvitesseMax"
        android:background="@drawable/bipbipup"
        android:layout_row="3"
        android:layout_column="0" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageViewvitesseMin"
        android:background="@drawable/bipbipdown"
        android:layout_row="4"
        android:layout_column="0" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/montagnehaut"
        android:id="@+id/imageViewaltitudeMax"
        android:layout_row="5"
        android:layout_column="0" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/montagnebas"
        android:id="@+id/imageViewAltitudeMin"
        android:layout_row="6"
        android:layout_column="0" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/feu"
        android:id="@+id/imageViewCalories"
        android:layout_row="7"
        android:layout_column="0" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Temps"
        android:id="@+id/histoboxTemps"
        android:layout_column="1"
        android:layout_row="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Distance"
        android:id="@+id/histoboxDistance"
        android:layout_column="1"
        android:layout_row="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vitesse"
        android:id="@+id/vitesse"
        android:layout_column="1"
        android:layout_row="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vitesse Max"
        android:id="@+id/vitesseMax"
        android:layout_column="1"
        android:layout_row="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vitesse Min"
        android:id="@+id/vitesseMin"
        android:layout_column="1"
        android:layout_row="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Altitude Max"
        android:id="@+id/altitudeMax"
        android:layout_column="1"
        android:layout_row="5"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Altitude Min"
        android:id="@+id/altitudeMin"
        android:layout_column="1"
        android:layout_row="6"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calories"
        android:id="@+id/Calories"
        android:layout_column="1"
        android:layout_row="7"  />

</GridLayout>